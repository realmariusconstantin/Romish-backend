# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5174

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/romish

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Steam API Configuration
STEAM_API_KEY=your_steam_api_key_here
STEAM_REALM=http://localhost:5000
STEAM_RETURN_URL=http://localhost:5000/auth/steam/return

# Discord Bot Configuration (for verification)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_server_id_here
DISCORD_VERIFIED_ROLE_ID=your_verified_role_id_here
DISCORD_API_ENDPOINT=http://localhost:3001/api/verify

# Dathost API Configuration (future integration)
DATHOST_EMAIL=your_dathost_email_here
DATHOST_PASSWORD=your_dathost_password_here
DATHOST_API_URL=https://dathost.net/api/0.1

# Match Configuration
QUEUE_SIZE=10
CAPTAIN_PICK_TIMEOUT=60000
MAP_BAN_TIMEOUT=30000

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
